package booking;

public class SearchFlightModel {
	Database database;
	
	public SearchFlightModel() {
		database=Database.getInstance();
	}
	
	void search(String from,String to,int searchType){
		//		search type
		//		1 - direct connection
		//		2 - available destination
		//		3 - start point
		
		//making space for new searching results
		database.getResultList().clear();
		
		System.out.println("a");
		if(searchType==1){
			for(int i =0;i<database.getFlightsList().size();i++){
				System.out.println("b");
				if(database.getFlightsList().get(i).getFrom().equals(from) && database.getFlightsList().get(i).getFrom().equals(from)){
					database.getResultList().add(database.getFlightsList().get(i));
				}
			}
		}
		else if(searchType==2){
			System.out.println("c");
			for(int i =0;i<database.getFlightsList().size();i++){
				if(database.getFlightsList().get(i).getFrom().equals(to)){
					database.getResultList().add(database.getFlightsList().get(i));
				}
			}
		}
		else if(searchType==3){
			System.out.println("d");
			for(int i =0;i<database.getFlightsList().size();i++){
				if(database.getFlightsList().get(i).getFrom().equals(from)){
					database.getResultList().add(database.getFlightsList().get(i));
				}
			}
		}

	}
}
