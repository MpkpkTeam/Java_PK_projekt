package booking;

import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.GridLayout;

import javax.swing.Box;
import javax.swing.ButtonGroup;
import javax.swing.JButton;
import javax.swing.JRadioButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class MenuView extends JFrame{
	private JPanel mainPanel;
	private JPanel aPanel; // this panel is in mainPanel
	private JPanel bPanel;  // this panel is in aPanel
	private JPanel cPanel; // this panel is in aPanel
	
	private JLabel headerText;
	private JRadioButton directSearchButton;
	private JRadioButton availableDestinationsButton;
	private JRadioButton possiblyAirportsToDestinationButton;
	private JButton selectButton;
	private ButtonGroup buttonGroup;
	
	public MenuView() {
		this.setTitle("Air Ticket Booking");
		this.setSize(300, 200);
		layoutConfig();
		
		JLabel headerText=new JLabel("Select a way of booking a tickets:");
		availableDestinationsButton=new JRadioButton("Search for a available destinations");
		possiblyAirportsToDestinationButton=new JRadioButton("Search a start airport for your destination");
		selectButton=new JButton("Select");
		buttonGroup=new ButtonGroup();
		
		directSearchButton=new JRadioButton("Select a direct connections");
		buttonGroup.add(directSearchButton);
		buttonGroup.add(availableDestinationsButton);
		buttonGroup.add(possiblyAirportsToDestinationButton);
		
		cPanel.add(headerText);
		cPanel.add(directSearchButton);
		cPanel.add(availableDestinationsButton);
		cPanel.add(possiblyAirportsToDestinationButton);
		cPanel.add(Box.createRigidArea(new Dimension(5, 0)));
		cPanel.add(selectButton);
		
		aPanel.add(bPanel);
		aPanel.add(cPanel);
		mainPanel.add(cPanel);
		
		this.add(mainPanel);
		
		this.setVisible(true);
	}
	
	private void layoutConfig(){
		mainPanel=new JPanel();
		aPanel=new JPanel();
		bPanel=new JPanel();
		cPanel=new JPanel();
		
		GridLayout aPanelLayout=new GridLayout(2, 0);
		FlowLayout bPanelLayout=new FlowLayout();
		GridLayout cPanelLayout=new GridLayout(10, 0);
		
		aPanel.setLayout(aPanelLayout);
		bPanel.setLayout(bPanelLayout);
		cPanel.setLayout(cPanelLayout);

	}
}