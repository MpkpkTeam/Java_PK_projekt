package mpkpk.project.hotel;

public class SingleRoom implements Room {
	
	private int id;
	private int capacity;
	private int numberOfPeople;
	
	public boolean IsOccupied()
	{
		if (numberOfPeople == 0)
		{
			return true;
		}
		else 
		{
			return false;
		}
	}

	public boolean SetNumberOfClients(int numberOfClients) throws TooManyClientsException {
		// TODO Auto-generated method stub
		return false;
	}

	public int GetId() {
		return id;
	}

	public int GetCapacity() {
		return capacity;
	}

	public SingleRoom(int id)
	{
		this.id = id;
		capacity = 1;
		numberOfPeople = 0;
	}
}
