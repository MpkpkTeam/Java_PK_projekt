package mpkpk.project.hotel;

import java.util.ArrayList;
import java.util.Date;

public class Reservation 
{
	Date from;
	public Date GetFromDate()
	{
		return from;
	}
	Date to;
	public Date GetToDate()
	{
		return to;
	}
	
	ArrayList<Client> clients = new ArrayList<Client>();
	public ArrayList<Client> GetClientList()
	{
		return clients;	
	}
	
	Room room ;
	public Room GetRoom()
	{
		return room;	
	}

	public Reservation(Date from, Date to, ArrayList<Client> clientsToAdd, Room room)
	{
		this.from = from;
		this.to = to;
		for(Client cl : clientsToAdd)
		{
			clients.add(cl);
		}
		this.room = room;
	}
}
