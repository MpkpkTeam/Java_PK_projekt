package booking;

import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.PrintWriter;
import java.io.UnsupportedEncodingException;
import java.math.BigDecimal;

public class OrderDetailsModel {
	void printTicket(String name,String surname,int age,int sex,String from,String to,BigDecimal[] price){
		PrintWriter writer=null;
		
		try {
			writer = new PrintWriter("ticket.csv", "UTF-8");
		} catch (FileNotFoundException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		} catch (UnsupportedEncodingException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		 writer.println("Name,Surname,Age,Sex");
		 writer.println(name+","+surname+","+age+","+getSex(sex));
		 writer.println("Start airport,End airport,Ticket price");
		 writer.println(from+","+to+","+price.toString());
		 
		 writer.close();
		 
		 /*
		 try {
			Runtime.getRuntime().exec("ticket.csv");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		*/
	}
	
	String getSex(int n){
		if(n==1){
			return "male";
		}
		else if(n==2){
			return "female";
		}
		else{
			return null;
		}
	}
	
}
