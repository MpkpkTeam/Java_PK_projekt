package booking;

import java.math.BigDecimal;

public class InitFlights {
	void init(){
		
		Database database=Database.getInstance();
		
		//flights from Warsaw
		database.getFlightsList().add(new Flight("1", database.getAirportsList().get(0), database.getAirportsList().get(1),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("2", database.getAirportsList().get(0), database.getAirportsList().get(2),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("3", database.getAirportsList().get(0), database.getAirportsList().get(3),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("4", database.getAirportsList().get(0), database.getAirportsList().get(4),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("5", database.getAirportsList().get(0), database.getAirportsList().get(5),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		
		//Flights from Krakow
		database.getFlightsList().add(new Flight("6", database.getAirportsList().get(1), database.getAirportsList().get(0),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("7", database.getAirportsList().get(1), database.getAirportsList().get(2),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("8", database.getAirportsList().get(1), database.getAirportsList().get(3),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("9", database.getAirportsList().get(1), database.getAirportsList().get(4),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
		database.getFlightsList().add(new Flight("10", database.getAirportsList().get(1), database.getAirportsList().get(5),new BigDecimal("100"),new BigDecimal("200"),new BigDecimal("300")));
	}
}
