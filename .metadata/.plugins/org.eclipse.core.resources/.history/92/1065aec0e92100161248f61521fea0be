package booking;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.GridLayout;

import javax.swing.BoxLayout;
import javax.swing.ButtonGroup;
import javax.swing.JRadioButton;
import javax.swing.plaf.basic.BasicBorders.RadioButtonBorder;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class MenuView extends JFrame{
	private JPanel mainPanel;
	private JPanel aPanel; // this panel is in mainPanel
	private JPanel bPanel;  // this panel is in aPanel
	private JPanel cPanel; // this panel is in aPanel
	
	private JLabel headerText=new JLabel("Choose the way of ticket booking:");
	private JRadioButton directSearchButton=new JRadioButton("Select a direct connections");
	private JRadioButton availableDestinationsButton=new JRadioButton("Search for a available destinations");
	private JRadioButton possiblyAirportsToDestinationButton=new JRadioButton("Search a start airport for your destination");
	private ButtonGroup buttonGroup;
	
	public MenuView() {
		this.setSize(600, 600);
		layoutConfig();
		
		buttonGroup=new ButtonGroup();
		bPanel.add(headerText,FlowLayout.CENTER);
		cPanel.add(directSearchButton);
		cPanel.add(availableDestinationsButton);
		cPanel.add(possiblyAirportsToDestinationButton);
		
		aPanel.add(bPanel);
		aPanel.add(cPanel);
		mainPanel.add(aPanel);
		
		this.add(mainPanel);
		
		this.setVisible(true);
	}
	
	private void layoutConfig(){
		mainPanel=new JPanel();
		aPanel=new JPanel();
		bPanel=new JPanel();
		cPanel=new JPanel();
		
		FlowLayout mainPanelLayout=new FlowLayout();
		BoxLayout aPanelLayout=new BoxLayout(aPanel, BoxLayout.Y_AXIS);
		FlowLayout bPanelLayout=new FlowLayout();
		BoxLayout cPanelLayout=new BoxLayout(cPanel, BoxLayout.Y_AXIS);
		
		mainPanel.setLayout(mainPanelLayout);
		aPanel.setLayout(aPanelLayout);
		bPanel.setLayout(bPanelLayout);
		cPanel.setLayout(cPanelLayout);

	}
}